<h1>My Stock Portfolio</h1>

<table class="table col-md-12">
  <tr>
    <th>Stock Names</th>
    <th>Purchasing Price</th>
    <th># of Shares</th>
    <th>Current Price</th>
    <th>Monetary Gain</th>
    <th>Actions</th>

  </tr>


  <% @portfolios.each do |p|%>
    <tr>
    <td>
      <%=p.name%>
    </td>
    <td>
      <%=p.orgprice%>
     </td>
     <td>
      <%=p.shares%>
     </td>
     <td>
      <%=p.curprice%>
     </td>
     <td>
      <%=p.profit%>
     </td>
     <td>
      <%#=link_to "Show", stock_path(p), :class => "btn btn-default"%>
      <%=link_to "Edit", edit_stock_path(p), :class => "btn btn-primary"%>
      <%=link_to "Delete", stock_path(p), :method => :delete, :class => "btn btn-danger" %>

      </td>
    </tr>
    <%end%>
    <tr>
      <%= form_for @portfolio, :url => stocks_path do |f| %>
      <td>
        <%#= f.label :name, "Name" %>
        <%= f.text_field :name, :class=>"form-control" %>
      </td>
      <td>
        <%#= f.label :name, "Buying Price" %>
        <%= f.text_field :orgprice, :class=>"form-control" %>
      </td>
      <td>
        <%#= f.label :description, "Number of Shares" %>
        <%= f.text_field :shares, :class=>"form-control" %>
      </td>
      <td>
        <%#= f.label :description, "Currrent Price" %>
        <%= f.text_field :curprice, :class=>"form-control" %>
      </td>
      <td>
        <%#= f.label :description, "Gain" %>
        <%= f.text_field :profit, :class=>"form-control" %>
      </td>
      <td>
        <%= f.submit "Create", :class => "btn btn-primary" %>
      </td>
        <% end %>
    </tr>

</table>
